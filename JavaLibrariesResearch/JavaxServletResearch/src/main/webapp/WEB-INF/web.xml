<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>HelloSimpleServlet</servlet-name>
        <servlet-class>com.lazyboyprod.servlets.HelloSimpleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomJspServlet</servlet-name>
        <jsp-file>/custom.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloSimpleServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomJspServlet</servlet-name>
        <url-pattern>/custom</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>